<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LuckyPOC.RegisterAnimalPage"
             Title="Cadastrar animal!">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Informe a descrição do animal" />
            <Entry x:Name="descriptionText" MaxLength="100" />

            <Label Text="Informe o tipo do animal" />
            <ListView x:Name="typeListView"></ListView>

            <Button x:Name="saveButton" Text="Salvar" Clicked="SaveButton_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>